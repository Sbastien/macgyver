# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 🍺 Homebrew Packages for macOS Development
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#
# A curated collection of essential development tools, modern CLI utilities,
# and productivity applications for macOS.
#
# Usage:
#   brew bundle --file=./Brewfile
#
# Legend:
#   ⭐ = Highly recommended / Popular
#   🔧 = Essential tool
#   💎 = Modern alternative to classic tools
#   📦 = Optional but useful
#
# Customization:
#   - Comment out packages you don't need with #
#   - Add new packages: brew "name" or cask "name"
#   - Find packages: brew search <name> or https://formulae.brew.sh
#
# Post-install configuration:
#   Many tools require shell integration. Add to ~/.zshrc:
#     eval "$(zoxide init zsh)"      # Smart cd
#     eval "$(starship init zsh)"    # Prompt
#     eval "$(atuin init zsh)"       # History
#     eval "$(direnv hook zsh)"      # Env vars
#     eval "$(rbenv init - zsh)"     # Ruby version manager
#     eval "$(nodenv init - zsh)"    # Node.js version manager
#     eval "$(pyenv init - zsh)"     # Python version manager
#

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 🖥️  Terminal & Shell Enhancements
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

brew "zsh"                    # 🔧 Modern shell (default on macOS)
brew "bash"                   # 🔧 Bash shell for scripts
brew "tmux"                   # ⭐ Terminal multiplexer - manage multiple sessions
brew "neovim"                 # ⭐ Modern Vim - extensible text editor
brew "starship"               # ⭐ Fast, customizable cross-shell prompt
brew "zoxide"                 # ⭐💎 Smart cd - learns your most-used directories
brew "chezmoi"                # 📦 Dotfiles manager - track your configs in Git
brew "thefuck"                # 📦 Corrects previous console commands
brew "atuin"                  # 💎 Better shell history - searchable, sync across machines

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 🔍 Modern CLI Tools (Rust-based, faster alternatives)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

brew "bat"                    # ⭐💎 cat with syntax highlighting & Git integration
brew "eza"                    # ⭐💎 ls with colors, icons, Git status
brew "fd"                     # ⭐💎 find replacement - simpler syntax, faster
brew "ripgrep"                # ⭐💎 grep replacement - blazing fast recursive search
brew "fzf"                    # ⭐🔧 Fuzzy finder - interactive filtering (essential!)
brew "tree"                   # 🔧 Directory tree viewer
brew "btop"                   # ⭐💎 Better than htop - resource monitor with mouse support
brew "dust"                   # 💎 Modern du - intuitive disk usage analyzer
brew "duf"                    # 💎 Modern df - prettier disk free utility
brew "procs"                  # 💎 Modern ps - better process viewer
brew "jq"                     # ⭐🔧 JSON processor - essential for JSON manipulation
brew "yq"                     # 📦 jq for YAML files
brew "tldr"                   # 📦 Simplified man pages - quick command examples
brew "coreutils"              # 🔧 GNU core utilities (gls, gcat, etc.)

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 🛠️  System Utilities
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

brew "fastfetch"              # 📦 System info display (Neofetch alternative)
brew "wget"                   # 🔧 File downloader
brew "curl"                   # 🔧 Transfer data with URLs
brew "openssh"                # 🔧 Secure remote login and file transfer

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 💻 Development Tools - Version Control & Languages
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Git & GitHub
brew "git"                    # ⭐🔧 Version control system
brew "git-delta"              # ⭐ Better git diff viewer with syntax highlighting
brew "lazygit"                # ⭐ Terminal UI for Git - keyboard-driven, intuitive
brew "gh"                     # ⭐ GitHub CLI - manage PRs, issues from terminal

# Language version managers
brew "rbenv"                  # 🔧 Ruby version manager
brew "nodenv"                 # 🔧 Node.js version manager
brew "pyenv"                  # 🔧 Python version manager
brew "goenv"                  # 🔧 Go version manager

# Development utilities
brew "direnv"                 # ⭐ Load/unload env variables based on directory
brew "watchman"               # 📦 File watching service (for React, Node.js)
brew "fontconfig"             # 🔧 Font configuration and customization
brew "mas"                    # 🔧 Mac App Store CLI - install App Store apps
brew "shellcheck"             # ⭐🔧 Shell script linter - ensure POSIX compliance

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 📱 Productivity Applications
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

cask "raycast"                # ⭐ Spotlight replacement - extensible launcher
cask "notion"                 # ⭐ All-in-one workspace for notes & docs
cask "rectangle"              # ⭐ Window management with keyboard shortcuts
cask "hiddenbar"              # 📦 Hide menu bar items for cleaner desktop
cask "slack"                  # 📦 Team communication platform

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 👨‍💻 Development Applications
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

cask "iterm2"                 # ⭐ Feature-rich terminal emulator
cask "warp"                   # 💎 Modern terminal with AI (alternative to iTerm2)

cask "visual-studio-code"     # ⭐ Popular code editor with extensions
cask "docker-desktop"         # ⭐🔧 Containerization platform (formerly "docker")
brew "lazydocker"             # ⭐ Terminal UI for Docker - like lazygit but for containers
cask "bruno"                  # 💎 Open-source API client

cask "zen"                    # ⭐ Modern browser focused on productivity

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 🔧 Utility Applications
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

cask "alt-tab"                # 📦 Windows-style Alt-Tab window switcher
cask "gas-mask"               # 📦 Hosts file manager - switch between multiple hosts files
cask "scroll-reverser"        # 📦 Reverse scroll direction per device
cask "utm"                    # ⭐ Virtual machines for macOS (Apple Silicon native)

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# 🔤 Fonts
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

cask "font-fira-code-nerd-font"       # ⭐ Programming font with ligatures & icons
cask "font-jetbrains-mono-nerd-font"  # Alternative monospace font

